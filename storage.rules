rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Match floor plan files
    match /floorplans/{userId}/{fileName} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId
                    && request.resource.contentType.matches('image/.*') 
                    || request.resource.contentType == 'application/pdf'
                    && request.resource.size < 20 * 1024 * 1024;
    }
    
    // Match 3D model files
    match /models/{userId}/{projectId}/{fileName} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId
                    && (request.resource.contentType == 'model/gltf-binary' 
                        || request.resource.contentType == 'model/gltf+json'
                        || fileName.matches('.*\\.(glb|gltf)$'))
                    && request.resource.size < 50 * 1024 * 1024;
    }
  }
}
